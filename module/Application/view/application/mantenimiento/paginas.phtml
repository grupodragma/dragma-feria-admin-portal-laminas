    function listarDatos() {
        dataTable.api().ajax.reload(null, false);
    }

    function respuesta(response, mensaje) {
        ocultarModal();
        if (response.result == 'success') {
            listarDatos();
            alerta(mensaje, 'success');
        }
    }

    $(document).on("click", ".flecha-arriba", function(){
        let contenedorFilaPortada = $(this).parents("tr");
        if(contenedorFilaPortada.prev().clone().length == 0)return;
        $(contenedorFilaPortada.clone()).insertBefore(contenedorFilaPortada.prev());
        contenedorFilaPortada.remove();
        guardarOrden();
    });

    $(document).on("click", ".flecha-abajo", function(){
        let contenedorFilaPortada = $(this).parents("tr");
        if(contenedorFilaPortada.next().clone().length == 0)return;
        $(contenedorFilaPortada.clone()).insertAfter(contenedorFilaPortada.next());
        contenedorFilaPortada.remove();
        guardarOrden();
    });

    function guardarOrden(){
        var data = [];
        var i = 1; 
        $("#dataTables tbody tr").each(function(){
            let ids = $(this).find(".opciones-flechas").attr("data-ids");
            data.push({ids: ids, orden: i});
            i++;
        });
        console.log(data);
        $.post('/mantenimiento/guardar-orden-paginas', {orden: data}, function(response){

        }, 'json');
    }

