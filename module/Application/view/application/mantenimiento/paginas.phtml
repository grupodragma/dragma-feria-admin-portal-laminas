    dataTable = $('#dataTables').dataTable({
        "ajax": "/mantenimiento/listar-paginas",
        "sDom": "<'row'<'col-xs-11 col-sm-6 tabla-opciones-izquierda'f><'col-sm-6 col-xs-1 tabla-opciones-derecha'>r>" +
