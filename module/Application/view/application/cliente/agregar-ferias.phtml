            },
            dominio: {
                required: 'Por favor, ingrese el dominio'
            },
            rv: {
                required: 'Por favor, ingrese el link de RV'
            }
          
        },
        errorPlacement: function (error, element) {
            error.insertAfter(element.parent());
        }
    });

</script>