    $(".select-categoria").change(function(){
        $(".content-select-proyectos, .content-select-bancos, .content-select-empresas, .content-select-pagina-posicion, .contenido-banner").hide();
        $("select[name='idproductos'], select[name='idbancos']").rules( "add", { required: false });
        if($(this).val() === 'PROYECTO') {
            $(".content-select-proyectos").show();
            $("select[name='idproductos']").rules( "add", { required: true });
