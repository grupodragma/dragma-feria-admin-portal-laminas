<script>

    $(".select2").select2();

    $("#validar_formulario").validate({
        rules: {
            idmenus:{
                required: true
            },
            titulo:{
                required: true
            },
            descripcion:{
                required: true
            }
        },
        errorPlacement: function (error, element) {
            error.insertAfter(element.parent());
        }
    });

    $(document).on("click", ".check_paso", function(){
        let checkSelected = $(this);
        let nextElement = $(this).parent().parent().next();
        if( checkSelected.is(":checked") ) {
            nextElement.show();
        } else {
            nextElement.hide();
        }
    });

</script>