            let file = files[0];
            let img_width = parseInt(contenedor.attr("data-width"));
            let img_height = parseInt(contenedor.attr("data-height"));
            let accept = contenedor.attr("data-accept");
            reader.readAsDataURL(file);
            reader.onload = function (e) {
